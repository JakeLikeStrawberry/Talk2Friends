<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_linear_gradient_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="RSVP'd Meetings"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:backgroundTint="@null" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nameButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linear_gradient_background"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Meeting 1"
                android:textAllCaps="false"
                android:textSize="15dp"
                app:backgroundTint="@null"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="277dp" />

            <ImageButton
                android:id="@+id/cross1"
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@drawable/linear_gradient_background"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cross_icon"
                app:backgroundTint="@null"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nameButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/linear_gradient_background"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Meeting 2"
                android:textAllCaps="false"
                android:textSize="15dp"
                app:backgroundTint="@null"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="138dp" />

            <ImageButton
                android:id="@+id/cross2"
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@drawable/linear_gradient_background"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cross_icon"
                app:backgroundTint="@null"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/linear_gradient_background"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/check_icon"

            android:layout_gravity="center"
            app:backgroundTint="@null"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>